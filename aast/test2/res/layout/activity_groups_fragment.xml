<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_group_fragment2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/us_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:layout_weight="0.15"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="0.85"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/us_user_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:textColor="#00598B"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/us_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#82C9F0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/us_dep"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:background="#2C81BA"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/post_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="left"
        android:text="Groups" />

    <ListView
        android:id="@+id/Community_Groups_List22"
        style="@style/TestNew"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E9E9E9"
        
        android:dividerHeight="0dp"
   />

</LinearLayout>